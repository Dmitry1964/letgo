mixin navigation(headerMods, currentURL)
  nav.navigation
    .navigation__wrapper
      .navigation__logo
        if(currentUrl === "index.html")
          svg(width="200", height="50")
            use(xlink:href="#logo_full")
        else
          a(href="index.html")
            svg(width="200", height="50")
              use(xlink:href="#logo_full")
      +navigation-menu()
      +navigation-users()
